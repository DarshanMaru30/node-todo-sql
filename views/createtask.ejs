<!DOCTYPE html>
<html lang="en">

<head>
      <meta charset="UTF-8">
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <title>Document</title>

</head>

<body>
      <form action="" method="post">
            <table>
                  <tr>
                        <td>Name: </td>
                        <td>
                              <select name="name" id="">
                                    <option value="" selected disabled>--Select Staff--</option>
                                    <%result.forEach(function(data){%>
                                          <option value="<%= data.name%>">
                                                <%= data.name%>
                                          </option>
                                          <%});%>
                              </select>
                        </td>
                  </tr>
                  <tr>
                        <td>Task: </td>
                        <td><input type="text" name="task"></td>
                  </tr>
                  <tr>
                        <td>Ending Date: </td>
                        <td><input type="date" name="edate" id="sedat" min=""></td>
                  </tr>
                  <tr>
                        <td></td>
                        <td><input type="submit" value="Save"></td>
                  </tr>
            </table>
      </form>
      <script>
            let todate = new Date();
            let todat = todate.getDate();
            let tomon = todate.getMonth();
            tomon = Number(tomon);
            tomon++;
            if (tomon < 10) {
                  tomon = String(tomon);
                  tomon = "0" + tomon;
            } else {
                  tomon = String(tomon);
            }
            let toyear = todate.getFullYear();
            document.getElementById('sedat').min = (toyear + "-" + tomon + "-" + todat);
      </script>
</body>

</html>